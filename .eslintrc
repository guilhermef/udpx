{
  "extends": "airbnb/base",
  "plugins": [
    "chai-friendly"
  ],
  "rules": {
    "semi" : [2, "never"],
    "func-names" : 0,
    "max-depth": [2, 5],
    "max-nested-callbacks": [2, 5],
    "no-lone-blocks": 2,
    "no-param-reassign": ["error", { "props": false }],
    "no-extra-parens": 0,
    "no-console": 0
  }
}
